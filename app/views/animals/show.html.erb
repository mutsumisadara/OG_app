<p id="notice"><%= notice %></p>
<div class="animal-profile">
  <div class="animal-profile-info">
    <%= @animal.name %>
    <%= @animal.sex ? 'メス♀' : 'オス♂' %>
    <%= image_tag @animal.picture_url %></p>
  </div>
</div>
<table>
  <% @animal.animal_managements.each do |animal| %>
    <tr><td><%= link_to animal.recorded_on, animal_animal_management_path(@animal.id, @animal.animal_management_ids) %></td></tr>
  <% end %>
</table>
<br>
<%= link_to 'カルテ登録', new_animal_animal_management_path(animal_id: @animal.id) %>
<%= link_to '編集', edit_animal_path(@animal) %>
<%= link_to '削除', @animal, method: :delete, data: { confirm: '本当に削除しますか？' } %>
<%= link_to '戻る', group_path(@animal.group_id) %>