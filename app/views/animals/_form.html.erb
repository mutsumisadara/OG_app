<%= form_with(model: @animal, local: true) do |form| %>

  <% if animal.errors.any? %>
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <h5>
        <i class="icon fa fa-ban"></i>
        <%= pluralize(animal.errors.count, "error") %> prohibited this team from being saved:
      </h5>
      <ul>
        <% animal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :名前 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :性別 %>
    <%= form.select :sex, Animal.sexes.keys.to_a, include_blank: '選択してください', class: 'form-control', required: true %>
    <!-- <%= form.label :sex, 'メス♀', value: 1 %>
    <%= form.radio_button :sex, '1' %>
    <%= form.label :sex, 'オス♂', value: 0 %>
    <%= form.radio_button :sex, '0' %> -->
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>