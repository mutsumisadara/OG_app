<!DOCTYPE html>
<html>
  <head>
    <title>命どぅ宝</title>
    <%= favicon_link_tag('favicon.ico') %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #FFCCFF;">
      <%= link_to image_tag('treasure.png', size: '50x50'), "/", class: "navbar-brand" %>
        <div class="container">
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <% if user_signed_in? %>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
                <%= link_to "グループ一覧", groups_path, class: "nav-link" %>
                <%= link_to "マイページ", user_path(current_user.id), class: "nav-link" %>
                <%= link_to 'グループ設立', new_group_path, class: "nav-link" %>
                <% if current_user.admin? %>
                  <%= link_to "管理者画面", rails_admin_path, class: "nav-link" %>
                <% end %>
              <% else %>
                <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
                <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
                <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "nav-link" %>
                <%= link_to 'ゲスト管理者ログイン', users_guest_admin_sign_in_path, method: :post, class: "nav-link" %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <div class = "container">
      <% if notice %>
        <p class="alert alert-notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-error"><%= alert %></p>
      <% end %>      
      <%= yield %>
    </div>

    <footer style="background-color: #FFCCFF;">
      <p> ©命どぅ宝 2023 / Created by Mutsumi Sadara</p>
    </footer>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>AOS.init();</script>
  </body>
</html>