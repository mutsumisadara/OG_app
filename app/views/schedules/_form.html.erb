<%= form_with(model: @schedule, local: true) do |form| %>

  <div class="content">
    <%= form.label :内容 %>
    <%= form.text_field :content %>
  </div>

  <div class="time">
    <%= form.label :日付 %>
    <%= form.date_select :start_time %>
  </div>

  <div class="submit">
    <%= form.submit '登録', class: 'btn btn-light' %>
  </div>

<% end %>